{% extends 'base.html.twig' %}

{% block title %}Student Details{% endblock %}

{% block body %}
    <h1>Student Details</h1>

    <ul>
        <li><strong>Name:</strong> {{ student.studentName }}</li>
        <li><strong>Email:</strong> {{ student.studentEmail }}</li>
        <li><strong>Gender:</strong> {{ student.studentGender == 'male' ? 'Male' : 'Female' }}</li>
        <li><strong>Date of Birth:</strong> {{ student.dateOfBirth ? student.dateOfBirth|date('Y-m-d') : '' }}</li>
        <li><strong>Registration Date:</strong> {{ student.registrationDate ? student.registrationDate|date('Y-m-d') : '' }}</li>
    </ul>

    <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-primary">Edit</a>
    <a href="{{ path('student_index') }}" class="btn btn-primary">Back to Student List</a>
{% endblock %}
